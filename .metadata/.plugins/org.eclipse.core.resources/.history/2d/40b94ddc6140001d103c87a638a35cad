<style type="text/css">
	input {font-family: 나눔고딕코딩; font-weight: bold;}
	input:focus {background-color: #eeeedd;}
	.btn {width: 150px;}
	.txt {text-align: right;}
	.btn {width: 150px;}
	textarea { font-family: 나눔고딕코딩; font-weight: bold;}
</style>

<script type="text/javascript">

	function myCalc()
	{	
		// 확인
		// alert("함수 호출 확인~!!");
		
		var numSrt = document.getElementById("num").value;
		var nNum = Number(numStr);
		// 누적합
		var nSum = 0;
		
		if (nNum < 100)
		{
			alert("입력값은 100 이상만 가능합니다.");
			return;
		}
		
		for (var n=1; n <= nNum; n++)
		{
			nSum += n;
			
		}
		
		document.getElementById("result").value = "1 ~ " + nNum + " : " + nSum ;
	}
	
</script>


