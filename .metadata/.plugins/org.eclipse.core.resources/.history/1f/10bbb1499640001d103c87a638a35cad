<meta charset="UTF-8">
<title>Test022.html</title>

<style type="text/css">
	input {width: 200px;}
	textarea { font-weight: bold;}

</style>


<script type="text/javascript">

	function myResult()
	{
		var str= "";
		var n = 0;
		var arr2 = new Array(new Array(),new Array(),new Array(),new Array(),new Array(),new Array());
		
// 		alert("함수 호출 확인~!!");
		
		do
		{
			str = prompt("이름 국어 영어 수학(" + (n+1) + ") : ";
			
			if (str==""|| str=="."|| str==" ")
				break;
			
			var member= str.split(" ");
			arr[0][n] = member[0];
			arr[1][n] = member[1];
			arr[2][n] = member[2];
			arr[3][n] = member[3];
			arr[4][n] = Number(member[1])+Number(member[2])+Number(member[3]).toString();
			arr[5][n] = 1;
			// 등수는 일단 모두 1등으로 채워넣는다.
			n++;
			
		} while (true);
		
		// 석차 산출 (반복문 중첩)
		for (var i = 0; i < arr[0].length; i++)
		{
			for (var j = 0; j < arr[0].length; j++)
			{
				if (i==j)
				{
					continue;
				}
				if (Number(arr[4][i])<Number(arr[4][j]))
				{
					arr[5][i] = (Number(arr[5][i])+1).toString();
				}
			}
			
			var result ="";
			
			for (var j = 0; j < arr[0].length; j++)
			{
				for (var k = 0; k < arr[0].length; k++)
				{
					// 테스트
					result += arr[k][j] + " ";
				}
			}
			
		}
		document.getElementById("txtCount").value = arr[0].length;
		document.getElementById("textarea").value ="이름  국어  영어  수학  총점  석차\n";
		document.getElementById("textarea").value += result;
		
		
	}

</script>

</head>
<body>

<div>
	<h1>자바스크립트 활용</h1>
	<hr>
</div>

<!-- 
	사용자로부터 여러 명의 이름과 과목 점수를 입력 받고
	그 내용과 총점과 석차를 전체 출력하는 페이지를 구현한다.
	
	HTML, CSS, Javascript 를 활용한다.
	
	단, 2차원 배열을 활용한다.
	
	페이지 레이아웃
	------------------------------------------------
	< 회원 정보 입력 > → click → 프롬프트 대화창 → 이름 국어 영어 수학(1) : 
	
	전체 회원 수 [   ] 명
	--------------------------------------------
		이름  국어 영어 수학 총점 석차 
	
			:
	-------------------------------------------- textarea
	
	
	
	------------------------------------------------
	
	1차원 배열
	var arr = new Array();
	
	2차원 배열
	var arr2 = newArray(new Array(), ...);
	
	
 -->
 
 <div>
	<form>
		<input type="button" class="btn" value="성적 정보 입력" id="txtx001" onclick="myResult()" >
		<br><br>
		
		전체 인원수
		<input type="text" class="txt" id="txtCount">명
		<br><br>
		
		<textarea rows="10" cols="30" id="textarea" readonly="readonly"> 이름 국어 영어 수학 총점 석차 </textarea>
	</form>
 </div>
 

