		var radioObj = document.getElementsByName("radioGroup");
		
// 		alert(radioObj);
		//--==>>[object NodeList]		자바 스크립트 배열을 반환 받은 상태
		
		// 그렇다면 배열의 길이는?
// 		alert(radioObj.length);
		//--==>> 6
		
		var message = "선택된 사항이 없습니다.";
		
		for (var i = 0; i < radioObj.length; i++)	// 0 1 2 3 4 5  배열 길이 6
		{
// 			alert(radioObj[i]);
			//--==>> [object HTMLInputElement]  inputElement 객체다.
			
			alert(radioObj[i].checked);
		
		}

		
// 		alert(message);
	}


