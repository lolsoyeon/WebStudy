<title>Test022_1.html</title>

<style type="text/css">
	input {font-family: 나눔고딕코딩; font-weight: bold;}
	input:focus {background-color: #eeeedd;}
	input.btn {font-weight: bold; font-family: 맑은 고딕;}
	.txt {text-align: right;}
	.btn {width: 150px;}
	textarea { font-family: 나눔고딕코딩; font-weight: bold;}
	.txt {text-align: center;}
</style>


<script type="text/javascript">

	function actionScore()
	{
// 		alert("함수 호출 확인");

		var str = "";
		// check~!!!
		var arr = new Array(new Array(), new Array(), new Array(), new Array(), new Array(), new Array());
		// 					이름들		국어점수들	영어점수들	 수학점수들	   총점들		석차들
		
		var n = 0;
		
		do
		{
			str = prompt("이름 국어 영어 수학(" + (n+1) + ") : ");
			// 홍길도 90 80 70
			// 고길동 90 70 60
			//
			
			if (str == null || str=="." || str====" ")
			{
				break;
			}
			
			
			var member = str.split(" ");
			
			
			// arr[n][0] = member[0];	// n번째 학생의 이름 이렇게 되면 안된다~!
			arr[0][n] = member[0];	// n번째 학생의 이름
		    arr[1][n] = member[1];	// n번째 학생의 국어점수
		    arr[2][n] = member[2];	// n번째 학생의 영어 점수
		    arr[3][n] = member[3];  // n번째 학생의 수학 점수
		    arr[4][n] = Number(member[1]) + Number(member[2]) + Number(member[3]); // n번째 학생의 총점
		    arr[5][n] = 1; // 지금은 석차를확인할 수없다 그래서 1이 들어있는게 편하다 나중에 비교연산
			 
		    n++ // 반복의 회차가 진행될수록 n은 1 씩증가
		    
		    
		} while (true);
		
		// 석차 계산
		
		for (var i=0; i <arr[4].lenght; i++)
		{
			for(var j=0; j<arr[4].lenght; i++)
			{
				if (i==j)
					continue;
				// i번째 학생의 총점이 j 번째 학생의 총점보다 작으면
// 				if( i번째 학생의 총점 < j번째 학생의 총점)
				if( arr[4][i] < arr[4][j])
				{
				
				// i번째 학생의 등수(석차) 를 1만큼 증가
				// → arr[5][i] 를 1만큼 증가
					arr[5][i] = (Number(arr[5][i])+1).toString();
				
				}
			}
			
		}
		
		//  결과 출력 → textaraea → #memberList
		var result = "";
		
		for (var j=0; <arr[0].length; j++)	// 학생의 수 만큼 회전
		{
			for (var k=0; k < arr.length; k++)	// 학생이 가진 속성만큼....회전 이름부터 속성까지
			{ 
				result += arr[k][j] + "   ";
			}
			result += "\n";					// 개행 추가
		}
		
		document.getElementbyId("txtCount").value = arr[1].length;	// arr[0],arr[2] 같다.
		
		document.getElementbyId("memberList").value = "이름  국어 영어 수학 총점 석차 \n";
		document.getElementbyId("memberList").value = "----------------------------\n";
		document.getElementbyId("memberList").value += result;
		
	}


</script>

</head>
<body>


<div>
	<h1>자바스크립트 활용</h1>
	<hr>
</div>

<!-- 
	사용자로부터 여러 명의 이름과 과목 점수를 입력 받고
	그 내용과 총점과 석차를 전체 출력하는 페이지를 구현한다.
	
	HTML, CSS, Javascript 를 활용한다.
	
	단, 2차원 배열을 활용한다.
	
	페이지 레이아웃
	------------------------------------------------
	< 회원 정보 입력 > → click → 프롬프트 대화창 → 이름 국어 영어 수학(1) : 
	
	전체 회원 수 [   ] 명
	--------------------------------------------
		이름  국어 영어 수학 총점 석차 
	
			:
	-------------------------------------------- textarea
	
	
	
	------------------------------------------------
	
	1차원 배열
	var arr = new Array();
	
	2차원 배열
	var arr2 = newArray(new Array(), ...);
	
	
 -->
 
 <div>
	<form>
		<input type="button" class="btn" value="성적 정보 입력" id="txtx001" onclick="actionScore()" >
		<br><br>
		
		전체 인원수
		<input type="text" class="txt" id="txtCount" readonly="readonly">명
		<br><br>
		
		<textarea rows="10" cols="50" id="memberList" readonly="readonly"></textarea>
	</form>
 </div>
 

