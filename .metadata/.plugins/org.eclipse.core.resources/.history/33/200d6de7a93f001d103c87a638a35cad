<script type="text/javascript">

	function js_add()
	{
		var txt01 = document.getElementById("num1").value;
		var txt02 = document.getElementById("num2").value;
		
		var result = Number(txt01) + Number(txt02);
		
		document.getElementById("result").value = result;
		
	}
	function js_minus()
	{
		var txt01 = document.getElementById("num1").value;
		var txt02 = document.getElementById("num2").value;
		
		var result = Number(txt01) - Number(txt02);
		
		document.getElementById("result").value = result;
	}
	function js_multiple()
	{
		var txt01 = document.getElementById("num1").value;
		var txt02 = document.getElementById("num2").value;
		
		var result = Number(txt01) * Number(txt02);
		
		document.getElementById("result").value = result;
		
	}
	function js_skajwl()
	{
		var txt01 = document.getElementById("num1").value;
		var txt02 = document.getElementById("num2").value;
		
		var result = Number(txt01) / Number(txt02);
		
		document.getElementById("result").value = result;
		
	}
	
	function only_One()
	{
		var txt01 = document.getElementById("num1").value; 
		var txt02 = document.getElementById("num2").value; 
		
		var result= 0;
		
		if (id="id1")
		{
			result = parseInt(txt01) + parseInt(txt02);
			
			document.getElementById("result").value = result;
		}
		else if (id="id2") 
		{
			result = parseInt(txt01) - parseInt(txt02);
			
			document.getElementById("result").value = result;
		}
		else if (id="id3") 
		{
			result = parseInt(txt01) * parseInt(txt02);
			
			document.getElementById("result").value = result;
		}
		else if (id="id4")
		{
			result = parseInt(txt01) / parseInt(txt02);	
			
			document.getElementById("result").value = result;
		}

// 		document.getElementById("result").value = result;
	}
	
</script>

