<script type="text/javascript">
	
	function playGame()
	{
// 		alert("함수호출 확인");
		var countStr = document.getElementById("textCount").value;
		var count = parseInt(countStr);
		
		// 입력 받은 수 만큼 반복
		for(var i=0; i<count; i++)		//
		{
// 			document.getElementById("resultArea").value += "로또 한게임 수행"+"\n";
// 			document.getElementById("resultArea").value += 로또 한게임 수행 함수()+"\n";
			document.getElementById("resultArea").value += lottoSingle()+"\n";
// 			lottoSingle();
		}

	}
	
	function lottoSingle()
	{
// 		return "수행한 로또게임";
		// 방 6개로 생성된 자바스크립트 배열 생성
		var lottoArray = new Array(6);
		
		// 1 ~ 45 의 숫자가 적힌 카드를 만든다. 만들어서 무작위로 섞는다.
		// 방 45개로 생성된 자바스크립트 배열 생성
		var cardArray = new Array(45);
		
		// 45개로 구성된 방에 1 ~ 45 숫자 채워 넣기 → 카드 만들기
		for (var i = 1; i <= cardArray.length; i++)
		{
			cardArray[i-1] = i;
		}
		
		// 확인
// 		alert(cardArray[1]);
		// => 내예상 2 ok
		
		// 뒤섞기
		for (var i = 0; i < cardArray.length; i++) // 0 1 2 3 4 ....44
		{
// 			Math.random();	//	0.0 ~ 1.0
// 			Math.random()*45;	//	0.0 ~ 44.0
// 			parseInt(Math.random()*45+1);	//	1 ~ 45 사이의 난수 발생
			
			 var j = parseInt(Math.random()*45);
			 // 무작위로 발생한 방번호의 값(j) 0, 1, 2, 3, ...방의 값을 자리 바꿈
			 // 자리바꿈이 무작위로 45번..?
			 var temp = cardArray[i];
			 cardArray[i] = cardArray[j];
			 cardArray[j] = temp;
			
		}
		
		// 확인
		// 뒤섞인 45개의 카드가 다 나온다.
// 		return cardArray;
		for (var i = 0; i < lottoArray.length; i++)
		{
			 // 이제 해야 할것 : cardArray() 에서 앞 6개만 복사한다.
			 // 아까그 45중에 앞에 6개가 복사된다.
			 lottoArray[i] = cardArray[i];
		}
		
		
// 		lottoArray.sort(숫자정렬팁기능)
// 		lottoArray.sort(이름없는 함수)
		lottoArray.sort(function(left, right)// 5 - 3 가 양수면 앞이 크다 오름차순
 		{
			return Number(left)- Number(right);
		});
		
	}

</script>



</head>
<body>

<div>
	<h1>자바스트립스 활용</h1>
	<h2>로또 번호 출력</h2>
	<hr>
</div>
<!-- 
	HTML, CSS,Javascript 를 활용하여
	로또 번호(1~45)를 중복되지 않은 정수 6 개로 생성하여
	출력해주는 페이지를 구현한다.
	단, 난수 발생 함수를 활용한다.
	하나의 게임 내에서 번호순(오름차순)으로 정렬하여 출력 할 수 있도록 한다.
	그리고, 주문한 게임의 수 만큼 출력 할 수 있도록 한다.
	
	페이지 레이아웃
	----------------------------------------------------------
	
	로또 게임  [  4  ] 장	→ text
	
	< 주문하기 >			→ button
	
	내용
	-------------------    	→ textarea
	1 2 7 12 35 42
	10 21 25 31 38 40
	3 5 6  15 24 29 
	2 3 8 12 23 35
	-------------------
	----------------------------------------------------------

 -->
<div>
	<form>
		로또 게임 
		<input type="text" id="textCount" class="txt">장 
		<br><br>
	
		<button type="button" onclick="playGame()">주문 하기</button>
		<br><br>
		내용 <br>
		<textarea rows="10" cols="50" readonly="readonly" id="resultArea"></textarea>
		
	</form>
</div>


