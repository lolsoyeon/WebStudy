	// 내가 처음한 것
	function insert_add()
	{
		var txt001 = document.getElementById("txtSu1").value;
		var txt002 = document.getElementById("txtSu2").value;
		var txt003 = document.getElementById("txtResult").value;
		
// 		var str =  parseint("txt001.value") + parseint("txt002.value");????이구문 복습할 부분
		str = txt001.value + txt002.value;
		
		// 테스트 
		return isNaN(str);
		alert(str);
		
		document.getElementById("txtResult").value = str;
// 		txt003.value = str;
	}
	// 선생님이 한 것
	function btnResult_click()
	{
		// 테스트
		// alert("함수호출~!!!");
		var num1 = document.getElementById("txtSu1").value;
		var num2 = document.getElementById("txtSu2").value;
		
		
		// check~!!!! 자바라면 가능한 구문이마 js 는 문자열이다
// 		var result = num1 + num2;					  // "12" + "34" → "1234"
// 		var result = parseInt(num1) + parseInt(num2); // 12 + 34 → 46
		var result = Number(num1) + Number(num2);
		
// 		var result = parseInt(num1 + num2);   --(X) 틀림
// 		var result = Number(num1 + num2);	  --(X) 틀림
		
		document.getElementById("txtResult").value = result;
		
		
	}

